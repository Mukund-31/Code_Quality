{
    "name": "code-quality",
    "displayName": "Code Quality",
    "description": "AI-Powered Code Review Assistant with GitHub Integration",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "code-quality-sidebar",
                    "title": "Code Quality",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "views": {
            "code-quality-sidebar": [
                {
                    "type": "webview",
                    "id": "code-quality-view",
                    "name": "Code Quality"
                }
            ]
        },
        "commands": [
            {
                "command": "code-quality.login",
                "title": "Code Quality: Login to GitHub"
            },
            {
                "command": "code-quality.reviewFile",
                "title": "Code Quality: Review Current File"
            },
            {
                "command": "code-quality.reviewRepo",
                "title": "Code Quality: Review Repository"
            },
            {
                "command": "code-quality.reviewPR",
                "title": "Code Quality: Review Pull Request"
            },
            {
                "command": "code-quality.browseRepos",
                "title": "Code Quality: Browse My Repositories"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.86.0",
        "octokit": "^3.1.0"
    }
}
